#!/bin/bash

du -H -c . | tail -n1 | cut -f 1

START=$(du -c . | tail -n1 | cut -f 1)

if [[ "$1" == "-d" ]] ; then
    DRYRUN="echo"
else
    DRYRUN=""
fi

echo "" > remove

di_opts=""
qual_opts="-crf 21"
codec="libx265"
speed="fast"

for infile in *.avi *.mkv ; do outfile="${infile}-reencodex265.mkv"; $DRYRUN ffmpeg -i "${infile}" ${di_opts} ${qual_opts}  -c:v ${codec} -sn -c:a aac ${subtitle} -preset ${speed} "${outfile}" ; done && $DRYRUN rm -f *.nfo && $DRYRUN rm -rf "*__thumb" && for x in $(\ls *.mkv *.avi | grep -v reenc) ; do echo "\rm -f \"${x}\"" >> remove ; done

echo "\rm -f remove" >> remove

END=$(du -c . | tail -n1 | cut -f 1)

echo "(${END}-${START}) / ${START}" | bc -l
