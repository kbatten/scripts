#!/bin/bash

du -H -c . | tail -n1 | cut -f 1

START=$(du -c . | tail -n1 | cut -f 1)

if [[ "$1" == "-d" ]] ; then
    DRYRUN="echo"
else
    DRYRUN=""
fi

echo "" > remove

di_opts=""
qual_opts="-crf 21"
codec="libx265"
speed="fast"

for indir in */; do
    pushd "$indir"
    for infile in * ; do
        case "$infile" in
        *reencode*) ;;
        *.avi | *.mkv)
            outfile="${infile}-reencodex265.mkv"
            $DRYRUN ffmpeg -i "${infile}" ${di_opts} ${qual_opts}  -c:v ${codec} -sn -c:a aac ${subtitle} -preset ${speed} "${outfile}"
            ;;
        esac
    done && \
    $DRYRUN rm -f *.nfo && \
    $DRYRUN rm -rf "*__thumb" && \
    for x in * ; do
        case "4x" in
            *reencode*) ;;
            *mkv | *avi) 
                echo "\rm -f \"${indir}${x}\"" | grep -v "reencode" >> ../remove
                ;;
        esac
    done
    popd
done

$DRYRUN rm -f *.nfo

echo "\rm -f remove" >> remove

END=$(du -c . | tail -n1 | cut -f 1)

echo "(${END}-${START}) / ${START}" | bc -l
