#!/bin/bash

du -H -c . | tail -n1 | cut -f 1

START=$(du -c . | tail -n1 | cut -f 1)

if [[ "$1" == "-d" ]] ; then
    DRYRUN="echo"
else
    DRYRUN=""
fi

echo "" > remove

di_opts=""
qual_opts="-crf 21"
codec="libx265"
speed="fast"

for indir in */; do
    pushd "$indir"
    reencode $@
    echo "cd \"$indir\"" >> ../remove
    cat remove >> ../remove
    echo "cd .." >> ../remove
    rm -f remove
    popd
done && \
$DRYRUN rm -f *.nfo && \
$DRYRUN rm -rf ".*__thumb" && \

echo "\rm -f remove" >> remove

END=$(du -c . | tail -n1 | cut -f 1)

echo "(${END}-${START}) / ${START}" | bc -l
