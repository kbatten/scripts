#!/bin/bash

# reencode a single file

if [[ "$1" == "-d" ]] ; then
    DRYRUN="echo"
    shift
else
    DRYRUN=""
fi

di_opts=""
qual_opts="-crf 21"
codec="libx265"
speed="slower"

infile="$1"

outfile="${infile}-reencodex265.mkv"
$DRYRUN ffmpeg -i "${infile}" ${di_opts} ${qual_opts}  -c:v ${codec} -sn -c:a aac ${subtitle} -preset ${speed} "${outfile}"
