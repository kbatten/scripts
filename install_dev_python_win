#!/bin/bash -e

source ./script_lib/std.inc
source ./script_lib/install.inc
source ./script_lib/graphics.inc
source ./script_lib/link.inc

py3version=3.8.10


sudo dpkg --add-architecture i386
sudo apt-get update

sudo apt-get install -y wine winetricks

wine wineboot
xvfb-run winetricks -q win10 vcrun2015

download https://www.python.org/ftp/python/${py3version}/python-${py3version}-amd64.exe
install_exe python-${py3version}-amd64.exe "/quiet PrependPath=1"

wine pip install pyinstaller==5.12.0

wine pip install ntfsutils
wine pip install numpy scipy
wine pip install sounddevice

link_bin pyinstaller-win
